DIST='unknown'

if [ -f /etc/redhat-release ]; then
	DIST=`cat /etc/redhat-release | awk '{ print $1; }'`
fi

##
## insert SuSe detection here
##
if [ -f /etc/SuSE-release ]; then
	DIST=`head -1 /etc/SuSE-release | awk '{print $1;}'`

case $DIST in
    CentOS|Red|Scientific)
	echo centos
        ;;
    SUSE)
	echo sles
	;;
    *)
        echo unknown
        ;;
esac
